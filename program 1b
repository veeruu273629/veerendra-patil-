#include <iostream>
using namespace std;
int main() {
int choice;
float temp, result;
cout << "1. Celsius to Fahrenheit\n2. Fahrenheit to Celsius\nEnter choice: ";
cin >> choice;
switch(choice) {
case 1:
cout << "Enter temperature in Celsius: ";
cin >> temp;
result = (temp * 9/5) + 32;
cout << "Temperature in Fahrenheit: " << result;
break;
case 2:
cout << "Enter temperature in Fahrenheit: ";
cin >> temp;
result = (temp - 32) * 5/9;
cout << "Temperature in Celsius: " << result;

break;
default:
cout << "Invalid choice.";
}
return 0;
}
